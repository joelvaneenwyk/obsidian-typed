{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6",
            "DOM"
        ],
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        // If the library is an external module (uses `export`), this allows your test file to import "obsidian" instead of "./index".
        // If the library is global (cannot be imported via `import` or `require`), leave this out.
        "baseUrl": "./types"
    },
    "include": [
        "types/**/*.d.ts"
    ]
}
